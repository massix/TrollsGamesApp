<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context="rocks.massi.trollsgames.fragments.Register" android:orientation="vertical"
              android:weightSum="1">

    <!-- TODO: Update blank fragment layout -->
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please complete the form below" android:typeface="sans" android:textAlignment="center"
            android:textSize="21sp" android:id="@+id/f_register_header"/>

    <!-- Nick on BGG -->
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edit_bggNick" android:hint="Insert your nick on BGG"/>


    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edit_forumNick" android:hint="Insert your display name"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/edit_email"
            android:hint="Insert your email address" style="@style/Widget.AppCompat.EditText"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/edit_password" android:hint="Insert your password"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/edit_password_verify" android:hint="Verify your password"/>
    <CheckBox
            android:text="I own a BGG Account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/cb_bggHandled" android:checked="true"/>
    <Button
            android:text="Submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/register_submit"
            style="@style/Widget.AppCompat.Button"/>

</LinearLayout>
