<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent">

    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="312dp"
            android:layout_height="141dp"
            android:id="@+id/search_progress_bar"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/search_results_view" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/search_results_view"
            app:layout_constraintBottom_toBottomOf="@+id/search_results_view" android:layout_marginBottom="0dp"
            android:visibility="visible" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            tools:layout_editor_absoluteY="139dp"/>
    <ListView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" android:id="@+id/search_results_view"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintVertical_bias="1.0"/>

</android.support.constraint.ConstraintLayout>